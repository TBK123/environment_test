<h1>Book details</h1>
<p style="color: green"><%= notice %></p>

<div id="book">
  <p>
    <strong>Title:</strong>
    <%= @book.title %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= @book.author %>
  </p>
  
  <p>
    <strong>Price:</strong>
    <%= @book.price %>
  </p>

  <p>
    <strong>Published-Date:</strong>
    <%= @book.published_date %>
  </p>
</div>

<div>
  <%= link_to "Edit this book", edit_book_path(@book) %> |
  <%= link_to "Back to books", books_path %> |
  <%= link_to "Delete this book", confirm_destroy_book_path(@book) %>
</div>
